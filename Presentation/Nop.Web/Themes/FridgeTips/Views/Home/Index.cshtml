}
<div class="page home-page">
    <div class="page-body">
        <div class="container">
            <div class="banner-section">
                <div class="main-banner">@await Component.InvokeAsync("Widget", new { widgetZone = "home_page_top" })</div>
                <div class="banner-right">
                    @*@Html.Action("TopicBlock", "Topic", new { systemName = "ft_home-features" })*@
                    @await Component.InvokeAsync("TopicBlock", new { systemName = "ft_home-features" })
