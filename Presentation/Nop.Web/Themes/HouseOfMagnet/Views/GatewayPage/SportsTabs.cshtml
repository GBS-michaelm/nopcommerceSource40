<div id="gateway-body" style="background-color : @Model.BackgroundColor;" class="bottommargin topmargin ">
    <div id="gateway-body-inner" style="background-image: url(@Model.BackgroundPicturePath)">
        <input id="cssChange" type="hidden" value="" />
        <input id="originalBodyHeight" type="hidden" value="" />
             
        <div id="topInner">
            <p id="gatewayTopText">
                @Model.UpperText
            </p>
        </div>
        <div id="gatewayLayersContainer">
            <div id="teamSelect">
                <main>

                    @for (int i = 0; i < Model.tabs.Count; i++)
                    {
                        if (i == 0)
                        {
                            <input id='tab@(i + 1)' type='radio' name='tabs' checked>
                        }
                        else
                        {
                            <input id='tab@(i + 1)' type='radio' name='tabs'>
                        }

                        <label id='label@(i + 1)' class='gateway-label' for='tab@(i + 1)'> @Model.tabs[i].tabName </label>

                    }
                    @for (int j = 0; j < Model.tabs.Count; j++)
                    {

                        //IList<Category> teamList = categoryService.GetAllCategoriesByParentCategoryId(teamCategories[j].Id);
                        //List<SportsTeam> teams = sportsTeam.CreateSportsTeamListFromCategories(teamList);
                        List<TabData> teamsInOrder = (List<TabData>)Model.tabs[j].TeamLinks.OrderBy(x => x.teamName).ToList();
                        //int cur = 1;
                        <section id='content@(j + 1)'>
                            <div class="columns teamname">                                
                                @foreach (TabData curTeam in teamsInOrder)
                                {     
                                    <a id='' class='team-from-list' href='@curTeam.teamLink'> @curTeam.teamName </a><br />                                                                        
                                }
                            </div>
                        </section>
                    }
                                        
                </main>

            </div>
            <div id="sportImage">
                <img id="gatewayForegroundImage" class="" src="@Model.ForegroundPicturePath" />
            </div>
        </div>
        <div id="bottomInnerTabs">
            <p id="gatewayBottomText">
                @Model.LowerText
            </p>
        </div>
        
    </div>
</div>




