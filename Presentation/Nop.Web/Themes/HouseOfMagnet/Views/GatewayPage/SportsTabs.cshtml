<div id="gatewayPageTitle" class="page-title panel-heading gateway-title">
    <h1 id="gatewayH1" class="gateway-h1">@Model.H1</h1>
    <div class="gateway-h2-wrap">
        <p class="gateway-h2"><span>@Model.H2</span></p>
    </div>
</div>

