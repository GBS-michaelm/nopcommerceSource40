@{
    Layout = "_ColumnsOne";

    //page class
    Html.AppendPageCssClassParts("html-home-page");
}
<div class="page home-page">
    <div class="page-body">
        <div class="container">
            <div class="row sale-promo">
                @await Component.InvokeAsync("TopicBlock", new { systemName = "hom_home_sale-text" })
            </div>
            <div class="banner-section">
                <div class="main-banner">@await Component.InvokeAsync("Widget", new { widgetZone = "home_page_top" })</div>
                <div class="banner-right">
                    @await Component.InvokeAsync("TopicBlock", new { systemName = "hom_home_market-center-promo" })
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        @*@await Component.InvokeAsync("TopicBlock", new { systemName = "HomePageText" })*@
        <div class="container">
            @await Component.InvokeAsync("Widget", new { widgetZone = "home_page_before_categories" })
            @await Component.InvokeAsync("HomepageCategories")
        </div>
        @*@await Component.InvokeAsync("Widget", new { widgetZone = "home_page_before_products" })
        @await Component.InvokeAsync("HomepageProducts")*@

        <!--Security section-->
        <div class="security-section">
            @await Component.InvokeAsync("TopicBlock", new { systemName = "hom_home_trust-points" })
        </div>
        <!--Security section-->

        <div class="tistimonials">
            <div class="container">
                @await Component.InvokeAsync("TopicBlock", new { systemName = "hom_home_testimonials" })
            </div>
        </div>

        <div class="join-email-section">
            <div class="container">
                <div class="row">
                    @await Component.InvokeAsync("TopicBlock", new { systemName = "hom_home_email-list" })
                    <div class="col-sm-5">
                        <div class="joinin-email">
                            <div class="email-lable">Email Address:</div>
                            @await Component.InvokeAsync("NewsletterBox")
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--process of product-->
        <div class="product-process">
            @await Component.InvokeAsync("TopicBlock", new { systemName = "hom_home_design-online" })
        </div>
        <!--process of product-->

        <div class="award-section">
            @await Component.InvokeAsync("TopicBlock", new { systemName = "hom_home_feature-product" })
        </div>

        <!--Greeting Cards from Note Card Cafe-->
        <div class="greeting-wrapper">
            @await Component.InvokeAsync("TopicBlock", new { systemName = "hom_home_ncc-cross-sell" })
        </div>
        <!--Greeting Cards from Note Card Cafe-->

        <div class="solutions-wrapper">
            @await Component.InvokeAsync("TopicBlock", new { systemName = "hom_home_industry" })
        </div>

        @*@await Component.InvokeAsync("Widget", new { widgetZone = "home_page_before_best_sellers" })
        @await Component.InvokeAsync("HomepageBestSellers")
        @await Component.InvokeAsync("Widget", new { widgetZone = "home_page_before_news" })
        @await Component.InvokeAsync("HomepageNews")
        @await Component.InvokeAsync("Widget", new { widgetZone = "home_page_before_poll" })
        @await Component.InvokeAsync("HomepagePolls")
        @await Component.InvokeAsync("Widget", new { widgetZone = "home_page_bottom" })*@
    </div>
</div>
