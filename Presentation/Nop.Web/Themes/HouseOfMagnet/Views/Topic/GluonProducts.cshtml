<script type="text/javascript">


    var imageUrl = '';

    var iframe = document.getElementById('gluon-iframe');


    window.addEventListener("message", function (e) {
        addToCart(e);
    }, false);

    function addToCart(e) {
        var opc = false;
        var opcAlt = false;
        var previewDisplay;

        if (e.data != "") {
            var json = JSON.parse(e.data);
            var cartImageSrc;
            for (var i = 0; i < json["data"].length; i++) {
                console.log(json["data"][i]);
                switch (json["data"][i].option) {
                    case 320:
                        cartImageSrc = json["data"][i].value;
                        break;
                    case 399:
                        opc = true;
                        break
                    default:
                        break;
                }

            }
            if (json.hasOwnProperty('misc3')) {
                opcAlt = true;
            }
            if (cartImageSrc == '') {
                previewDisplay = "undefined";
            }
            previewDisplay = (opc || opcAlt) ? "http://gluon.houseofmagnets.com" + cartImageSrc : "undefined";
            AddItem(e.data, $("#hdn-cart-item-id").val(), $("#hdn-qty").val(), $("#hdn-product-id").val(), previewDisplay, $("#hdn-edit-active").val());

        }
    }

</script>

