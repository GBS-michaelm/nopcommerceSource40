@model PasswordRecoveryModel
@{
    Layout = "_ColumnsOne";

    //title
    Html.AddTitleParts(T("PageTitle.PasswordRecovery").Text);
    //page class
    Html.AppendPageCssClassParts("html-password-recovery-page");
}
<div class="page password-recovery-page">
    <div class="page-title panel-heading">
        <h1>@T("Account.PasswordRecovery")</h1>
    </div>
    <div class="page-body">
        @if (!string.IsNullOrEmpty(Model.Result))
        {
            <div class="alert alert-info">
                @Model.Result
            </div>
        }
        <form asp-route="PasswordRecovery" method="post" class="form-horizontal">
            <div asp-validation-summary="ModelOnly" class="message-error"></div>
            <div class="description alert alert-info">@T("Account.PasswordRecovery.Tooltip")</div>
            <div class="">
                <div class="form-group row">
                    <div class="">
                        <label asp-for="Email" asp-postfix=":" class="control-label col-sm-3 col-md-2 col-xs-12 password-text"></label>
                        <div class="col-sm-5 col-md-3 col-xs-12">
                            <input asp-for="Email" class="email form-control" />
                        </div>
                        <div class="col-sm-3 col-md-4 col-xs-12">
                            <nop-required />
                            <span asp-validation-for="Email"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-offset-3 col-md-offset-2 col-sm-2 col-md-2">
                    <input type="submit" name="send-email" class="btn btn-primary password-recovery-button" value="@T("Account.PasswordRecovery.RecoverButton")" />
                </div>
            </div>
        </form>
    </div>
</div>