<div class="form-group" style="padding-top: 20px;padding-bottom: 30px;">
    <label for="Add_phone_number" style="font-weight:normal; top:10px;" class="control-label col-sm-3 col-md-3">Add phone number</label>
    <div class="visible-xs form-title-rquired"><span class="required" aria-required="true">*</span></div>
    <div class="col-sm-4 col-md-4">
        <input class="form-control" data-val="true" data-val-required="Phone number is required." id="Add_phone_number" name="Addphone.number" value="" aria-required="true" type="text">
    </div>
    <div class="col-sm-4 col-md-4">
        <div class="visible-lg visible-md visible-sm form-title-rquired"><span class="required" aria-required="true">*</span></div>
        <span class="field-validation-valid" data-valmsg-for="Addphone.number" data-valmsg-replace="true"></span>
    </div>
</div>
<script type="text/javascript">
    $('#AddPhoneNum').blur(function () {
        $('#spnPhoneStatus').hide();
        var phonenumber = $(this).val();
        var phoneNum = phonenumber.replace(/[^\d]/g, '');
        if (phonenumber.length > 6 && phonenumber.length < 11) {
            $.ajax({
                url: '/GBSOrder/AddSessionVar',
                type: 'POST',
                contentType: 'application/json;',
                data: JSON.stringify({ phnum: $(this).val() }),
                success: function (valid) { }
            });
        } else {
            $('#spnPhoneStatus').show();
            $('#spnPhoneStatus').css('color', 'red');
            document.getElementById("AddPhoneNum").focus();
            document.getElementById("AddPhoneNum").value = "";
            return false;
        }
    });


</script>
