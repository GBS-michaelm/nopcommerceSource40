@using Nop.Web.Framework;
@using Nop.Web.Framework.UI;
@model Nop.Plugin.Widgets.MarketCenters.GBS.Models.Clients.ContactModel
<div class="raw clearfix">
    <div class="col-md-12">
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-heading">
                    @*Account Contacts*@
                    @T("MarketCenters.Client.Contacts.AccountContacts")
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <div class="col-md-3">                                    
                            @Html.NopLabelFor(model => model.ContactName)
                        </div>
                        <div class="col-md-9">
                            @Html.NopEditorFor(model => model.ContactName)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.NopLabelFor(model => model.ContactEmail)
                        </div>
                        <div class="col-md-9">
                            @Html.NopEditorFor(model => model.ContactEmail)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.NopLabelFor(model => model.ContactPhone)
                        </div>
                        <div class="col-md-9">
                            @Html.NopEditorFor(model => model.ContactPhone)
                        </div>
                    </div>                   
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-heading">
                    @*GBS Account Rep*@
                    @T("MarketCenters.Client.Contacts.GBSAccountRep")
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.NopLabelFor(model => model.ContactNameGBS)
                        </div>
                        <div class="col-md-9">
                            @Html.NopDropDownListFor(model => model.ContactNameGBS, Model.AvailableContactNames)
                        </div>
                    </div>                 
                </div>
            </div>
        </div>
    </div>  
</div>