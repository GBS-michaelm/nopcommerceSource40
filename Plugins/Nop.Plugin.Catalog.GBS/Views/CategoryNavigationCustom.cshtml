@model Nop.Plugin.Catalog.GBS.Models.CategoryNavigationModelCustom
@using Nop.Plugin.Catalog.GBS.Models;
@{
    if (Model.NoOfChildren < 0)
    {
        Model.NoOfChildren = 0;
    }
    int NoOfChildren = Model.NoOfChildren;
}
<link href="/Plugins/Nop.Plugin.Catalog.GBS/content/styles.css" rel="stylesheet" />
@functions{
    public bool BreadCrumbContainsCurrentCategoryId(CategorySimpleModelCustom category)
    {
        if (Model.CurrentCategoryId == 0)
            return false;

        if (category.Id == Model.CurrentCategoryId)
            return true;

        foreach (var subCategory in category.SubCategories)
        {
            if (BreadCrumbContainsCurrentCategoryId(subCategory))
            {
                return true;
            }
        }

        return false;
    }
}
@helper RenderCategoryLine(CategorySimpleModelCustom category, int level, int NoOfChildren)
{
    bool active = category.Id == Model.CurrentCategoryId || category.SubCategories.Count(BreadCrumbContainsCurrentCategoryId) > 0;
    bool last = category.Id == Model.CurrentCategoryId;
    string liClass = active ? "active" : "inactive";
    if (last)
    {
        liClass += " last";
    }
    <li class="@liClass">
        <a href="@Url.RouteUrl("Category", new { SeName = category.SeName })">
            @category.Name
            @if (category.NumberOfProducts.HasValue)
            {
                <text> </text>@T("Categories.TotalProducts", category.NumberOfProducts.Value)
            }
        </a>
        @{
            //if (category.Id == Model.CurrentCategoryId ||
            //    category.SubCategories.Count(BreadCrumbContainsCurrentCategoryId) > 0)
            //{
            if (category.SubCategories.Count > 0)
            {
                level = level + 1;
                if (level <= NoOfChildren)
                {
                    <ul class="sublist">
                        @foreach (var subCategory in category.SubCategories)
                        {
                            if (Model.AllCategory)
                            {
                                @RenderCategoryLine(subCategory, level, NoOfChildren)
                            }
                            else if (subCategory.ProductsCount > 0 || Nop.Plugin.Catalog.GBS.Controllers.WidgetsCategoryNavigationController.HasSubcategoryProducts(subCategory))
                            {
                                @RenderCategoryLine(subCategory, level, NoOfChildren)
                            }
                        }
                    </ul>
                }
            }
    //}
        }
    </li>
}
@if (Model.Categories.Count > 0)
{
    <div class="block block-category-navigation">
        <div class="title">
            <strong>@T("Categories")</strong>
        </div>
        <div class="listbox">
            <ul class="list">
                @foreach (var category in Model.Categories)
                {
                    if (Model.AllCategory)
                    {
                        @RenderCategoryLine(category, 0, NoOfChildren)
                    }
                    else if (category.ProductsCount > 0 || Nop.Plugin.Catalog.GBS.Controllers.WidgetsCategoryNavigationController.HasSubcategoryProducts(category))
                    {
                        @RenderCategoryLine(category, 0, NoOfChildren)
                    }
                }
            </ul>
        </div>
    </div>
}

<script type="text/javascript">
    $(document).ready(function () {

        if ($('.block-category-navigation .listbox ul.list li ul').hasClass('sublist')) {
            $('.block-category-navigation .listbox ul.list li ul').parent().addClass('submenuwrap');
            $('.block-category-navigation .listbox ul.list li.submenuwrap').append('<div class="menuclick"></div>');
        }

        $(".menuclick").click(function () {
            $(this).prev().slideToggle("fast");
        });
    });



</script>