@model Nop.Plugin.Catalog.GBS.Models.ConfigurationModel
@{
    Layout = "_ConfigurePlugin";
}
@using Nop.Web.Framework;
@await Component.InvokeAsync("StoreScopeConfiguration")
<form asp-controller="WidgetsCategoryNavigation" asp-action="Configure" method="post">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="AllCategory_OverrideForStore" asp-input="AllCategory" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="AllCategory" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="AllCategory" />
                        <span asp-validation-for="AllCategory"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="NoOfChildren_OverrideForStore" asp-input="NoOfChildren" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="NoOfChildren" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="NoOfChildren" />
                        <span asp-validation-for="NoOfChildren"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="IsActive_OverrideForStore" asp-input="IsActive" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="IsActive" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="IsActive" />
                        <span asp-validation-for="IsActive"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="BlackList_OverrideForStore" asp-input="IsActive" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="BlackList" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="BlackList" />
                        <span asp-validation-for="BlackList"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        &nbsp;
                    </div>
                    <div class="col-md-9">
                        <input type="submit" name="save" class="btn bg-blue" value="@T("Admin.Common.Save")" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
