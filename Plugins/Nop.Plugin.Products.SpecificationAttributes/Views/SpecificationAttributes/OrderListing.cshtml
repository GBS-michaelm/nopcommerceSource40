@model System.Collections.Generic.List<Nop.Plugin.Products.SpecificationAttributes.Models.CustomerOrderListModel.OrderDetailsModel>

<div class="tabcontainer order-details-page">

    <ul class="tabheading">
        <li class="active" rel="tab1"><a href="javascript:return false;">Orders</a> </li>
        <li rel="tab2"><a href="javascript:return false;">Open Orders</a> </li>
        <li rel="tab3"><a href="javascript:return false;">Cancelled Orders</a> </li>
    </ul>



    <div class="tabbody active" id="tab1" style="display: block;">
        @Html.Partial("~/Plugins/Products.SpecificationAttributes/Views/SpecificationAttributes/_OrderListingDetails.cshtml", Model)

    </div>

    <div class="tabbody" id="tab2" style="display: none;">
        <div class="order-list padtop25">
            @if (Model.Count > 0)
            {
                foreach (var order in Model)
                {
                    if (order.OrderStatus != "Complete")
                    {
                       
                            @Html.Partial("~/Plugins/Products.SpecificationAttributes/Views/SpecificationAttributes/_OrderListingDetails.cshtml", Model)
                     
                    }
                }
            }
            else
            {
                <div class="no-data">
                    @T("Account.CustomerOrders.NoOrders")
                </div>
            }
        </div>

    </div>
    <div class="tabbody" id="tab3" style="display: none;">
        <div class="order-list padtop25">
            @if (Model.Count > 0)
            {
                foreach (var order in Model)
                {
                    if (order.OrderStatus == "Cancelled")
                    {
                        @Html.Partial("~/Plugins/Products.SpecificationAttributes/Views/SpecificationAttributes/_OrderListingDetails.cshtml", Model)
                    }
                }
            }
            else
            {
                <div class="no-data">
                    @T("Account.CustomerOrders.NoOrders")
                </div>
            }
        </div>

    </div>
</div>
