@{
    Layout = "";
}
@model Nop.Plugin.DiscountRules.HasAttribute.Models.RequirementModel
@using Nop.Web.Framework;

<script type="text/javascript">
    $(document).ready(function () {
        $('#saveHasAttributerequirement@(Model.RequirementId)').click(function () {
            var attributeIds = $("#@Html.FieldIdFor(model => model.Attributes)").val();
            var discountId = @Model.DiscountId;
            var requirementId = @Model.RequirementId;

            var postData = {
                discountId: discountId,
                discountRequirementId: requirementId,
                attributeIds: attributeIds
            };
            addAntiForgeryToken(postData);

            $.ajax({
                cache:false,
                type: "POST",
                url: "@(Url.Action("Configure", "DiscountRulesHasAttribute"))",
                data: postData,
                success: function (data) {
                    $('#pnl-save-requirement-result@(Model.RequirementId)').fadeIn("slow").delay(1000).fadeOut("slow");
                    //notify parent if it's a new requirement
                    @if (Model.RequirementId == 0)
                    {
                        <text>$("#discountRequirementContainer").trigger('nopnewdiscountruleadded', [data.NewRequirementId]);</text>
                    }
                },
                error:function (xhr, ajaxOptions, thrownError){
                    alert('@Html.Raw(HttpUtility.JavaScriptStringEncode(T("Admin.Promotions.Discounts.Requirements.FailedToSave").Text))');
                }
            });
        });
    });
</script>

<div class="form-group">
    <div class="col-md-3 requirement-label-col">
        @Html.NopLabelFor(model => model.Attributes)
    </div>
    <div class="col-md-9 requirement-data-col">
        <div class="requirement-data-input">
            <div class="input-group">
                @Html.NopEditorFor(model => model.Attributes)
                <div class="input-group-btn">
                    <input type="submit"
                           id="btnAddNewDiscountRequirementAttribute@(Model.RequirementId)"
                           value="@T("Plugins.DiscountRules.HasAttribute.Fields.Attributes.AddNew")"
                           onclick="javascript:OpenWindow('@(Url.RouteUrl("Plugin.DiscountRules.HasAttribute.AttributeAddPopup", new {btnId = "btnRefreshDiscountRequirementAttributes" + Model.RequirementId, AttributeIdsInput = Html.FieldIdFor(model => model.Attributes)}))', 800, 850, true); return false;"
                           class="btn btn-info" />
                    <input type="submit" id="btnRefreshDiscountRequirementAttributes@(Model.RequirementId)" style="display: none" />
                </div>
            </div>
        </div>
        <div class="requirement-data-buttons">
            <input type="button" id="saveHasAttributerequirement@(Model.RequirementId)" class="btn btn-primary" value="@T("Admin.Common.Save")" />
        </div>
    </div>
</div>
<div class="form-group">
    <div class="col-md-offset-3 col-md-9 requirement-messages-col">
        <div class="requirement-attribute-names text-blue" id="discountrequirement-attribute-names@(Model.RequirementId)"></div>
        <div id="pnl-save-requirement-result@(Model.RequirementId)" style="display: none;" class="text-green margin-t-5">
            @T("Admin.Promotions.Discounts.Requirements.Saved")
        </div>
        <div id="discountrequirement-Attributes-check-progress@(Model.RequirementId)" class="please-wait pull-right" style="display: none;">
            @T("Common.Wait...")
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function() {
        $('#btnRefreshDiscountRequirementAttributes@(Model.RequirementId)').click(function() {
            //refresh attribute list
            loadDiscountRequirementAttributeFriendlyNames@(Model.RequirementId)();

            //return false to don't reload a page
            return false;
        });
    });

    $(document).ready(function() {
        loadDiscountRequirementAttributeFriendlyNames@(Model.RequirementId)();
    });
    $(document).ready(function() {
        $('#@Html.FieldIdFor(model => model.Attributes)')
            .data('timeout', null)
            .keyup(function() {
                clearTimeout($(this).data('timeout'));
                //one second timeout
                $(this).data('timeout', setTimeout(loadDiscountRequirementAttributeFriendlyNames@(Model.RequirementId), 1000));
            });
    });

    function loadDiscountRequirementAttributeFriendlyNames@(Model.RequirementId)() {
        var inputValue = $('#@Html.FieldIdFor(model => model.Attributes)').val();
        if (inputValue) {
            //load friendly names
            $('#discountrequirement-Attributes-check-progress@(Model.RequirementId)').show();

            var postData = {
                attributeIds: inputValue
            };
            addAntiForgeryToken(postData);

            $.ajax({
                cache: false,
                type: 'POST',
                url: '@Url.RouteUrl("Plugin.DiscountRules.HasAttribute.LoadAttributeFriendlyNames")',
                data: postData,
                dataType: 'json',
                success: function(data) {
                    $('#discountrequirement-Attributes-check-progress@(Model.RequirementId)').hide();
                    $('#discountrequirement-attribute-names@(Model.RequirementId)').text(data.Text);
                    $('#discountrequirement-attribute-names@(Model.RequirementId)').addClass('filled');
                },
                failure: function() {
                    $('#discountrequirement-Attributes-check-progress@(Model.RequirementId)').hide();
                    $('#discountrequirement-attribute-names@(Model.RequirementId)').text('');
                    $('#discountrequirement-attribute-names@(Model.RequirementId)').removeClass('filled');
                }
            });
        } else {
            $('#discountrequirement-attribute-names@(Model.RequirementId)').text('');
            $('#discountrequirement-attribute-names@(Model.RequirementId)').removeClass('filled');
        }
    }
</script>
